{% extends "plantillaNavbarAdmin.php.twig" %}

    {% block head %}
    <link rel="stylesheet" type="text/css" href="style.css">
    <link href="./fontawesome/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    {% endblock %}

    {% block titulo %} <h1>Usuarios</h1> {% endblock %}

    {% block contenido %}

        <table class="table">
            <thead class="thead-dark"> 
                <th>ID</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Fecha Nac</th>
                <th>Foto</th>
                <th></th>
            </thead>
            
            <tbody>
                {% for item in dat  %}
                <tr class="tr">
                    <td>{{item.idUsu}}</td>
                    <td>{{item.email}}</td>
                    <td>{{item.nombre}}</td>
                    <td>{{item.apellidos}}</td>
                    <td>{{item.fec}}</td>
                    <td><img src="{{item.foto}}"  height="100" width="100"></img></td>
                    <td> <a href="index.php?con=usuario&ope=borrar&id={{item.idUsu}}">Borrar</a> </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    {% endblock %}